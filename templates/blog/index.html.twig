{% extends 'base.html.twig' %}

{% block stylessheets %}
    {{ parent()}}
    <link href="../public/css/style.css" rel="stylesheet">
{% endblock %}
{% block body %}

{% for article in articles %}
    <article>
        <div class="card article">
            <center><h2>{{ article.title }}</h2></center>
            <div class="metadata"> Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie </div>
            <div class="content" style="display:flex;flex-direction:column">
                <img style="width:35%; height:auto" src="{{ article.image }}" alt="">
                {{ article.content }}
                <a href="{{ path('blog_show', {'id':article.id}) }}" class="btn btn-parimary w-50"> Lire la suite</a>
            </div>
        </div>
    </article>
{% endfor %}
{% endblock %}
